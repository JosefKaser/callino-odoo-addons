<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="rksv_box_form" model="ir.ui.view">
            <field name="name">rksv_box_form</field>
            <field name="model">rksv.box</field>
            <field name="arch" type="xml">
                <form string="RKSV Box">
                    <header>
                        <button name="button_query_box" type="object" class="btn-primary-soft" string="Update"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <field name="last_error" nolabel="1"/>
                        <group>
                            <field name="ipv4"/>
                            <field name="proto"/>
                            <field name="timeout"/>
                            <field name="available"/>
                            <field name="last_ping"/>
                        </group>
                        <label for="signature_provider_ids"/>
                        <field name="signature_provider_ids" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rksv_box_tree" model="ir.ui.view">
            <field name="name">rksv_box_tree</field>
            <field name="model">rksv.box</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="ipv4"/>
                    <field name="available"/>
                    <field name="last_ping"/>
                </tree>
            </field>
        </record>

        <record id="rksv_box_action" model="ir.actions.act_window">
            <field name="name">RKSV Boxen</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rksv.box</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="rksv_box_categ_menu" name="RKSV" parent="base.menu_custom" sequence="50"/>
        <menuitem id="rksv_box_menu" name="Boxen" parent="rksv_box_categ_menu" action="rksv_box_action" sequence="10"/>
    </data>
</odoo>