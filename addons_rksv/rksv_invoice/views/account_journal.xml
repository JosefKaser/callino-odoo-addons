<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_account_journal_form" model="ir.ui.view">
            <field name="name">view_account_journal_form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="rksv" string="RKSV" attrs="{'invisible': ['|',('type', '!=', 'cash'),('rksv_at','=',False)]}">
                        <header>
                            <button name="update_rksv_status" type="object" string="Update Status"/>
                            <button name="create_rksv_on_posbox" type="object" string="Auf PosBox Registrieren" attrs="{'invisible': [('posbox_registered', '=', True)]}"/>
                            <button name="register_cashbox_bmf" type="object" string="Anmeldung beim BMF" attrs="{'invisible': [('bmf_gemeldet', '=', True)]}"/>
                            <button name="set_sprovider_posbox" type="object" string="Signature Provider setzen"/>
                            <button name="check_status" type="object" string="Integritätsprüfung"/>
                            <button name="delete_start_receipt" type="object" string="Startbeleg löschen" groups="base.group_no_one"/>
                            <button name="rksv_write_dep_crypt_container" type="object" string="DEP Dateien erzeugen"/>
                            <field name="rksv_state" widget="statusbar" statusbar_visible=""/>
                        </header>
                        <field name="rksv_status_text" nolabel="1"/>
                        <group>
                            <group name="rksv_config" string="Konfiguration">
                                <field name="cashregisterid" attrs="{'required': [('rksv_at', '=', True),('type', '=', 'cash')]}"/>
                                <field name="signature_provider_id" attrs="{'required': [('rksv_at', '=', True),('type', '=', 'cash')]}"/>
                                <field name="posbox_registered"/>
                                <field name="bmf_gemeldet"/>
                                <field name="bmf_test_mode"/>
                                <field name="rksv_at"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>