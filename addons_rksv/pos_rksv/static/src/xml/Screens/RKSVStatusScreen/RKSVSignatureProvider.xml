<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="RKSVSignatureProvider" owl="1">
        <div class="sprovider">
            <p><b><t t-esc="props.signature.reader"/></b></p>
            <p><t t-esc="props.signature.subject"/></p>
            <p>Seriennummer: <t t-esc="props.signature.serial"/></p>
            <div class="signature-provider-status-indicator clearfix">
                <div class="indicator" t-att-style="'background:'+state.color"/>
                <label>BMF (Signature):</label>
                <div class="indicator-message"><t t-esc="state.message"/></div>
            </div>
            <t t-if="valid_vat">
                <button t-on-click="use_signature">Signatur verwenden</button>
                <button t-on-click="reload_status">Status aktualisieren</button>
                <button t-on-click="bmf_register_signature">Beim BMF anmelden</button>
                <!--
                <button t-on-click="bmf_register_dead">Ausfall melden</button>
                <button t-on-click="bmf_register_working">Betrieb melden</button>
                -->
            </t>
            <t t-if="!valid_vat">
                <p style="color:red;">UID stimmt nicht mit der UID Ihres Unternehmens Ã¼berein</p>
            </t>
        </div>
    </t>

</templates>