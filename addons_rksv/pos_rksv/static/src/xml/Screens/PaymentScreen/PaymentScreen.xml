<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('next')]" position="replace">
            <div t-if="!env.isMobile and rksvstate.validate" class="button next validation" t-att-class="{ highlight: currentOrder.is_paid() and currentOrder._isValidEmptyOrder() }"
                t-on-click="() => this.trigger('validate-order')">
                <div class="pay-circle">
                    <i class="fa fa-chevron-right" role="img" aria-label="Pay" title="Pay" />
                </div>
                <span class="next_text">Validate</span>
            </div>
        </xpath>
    </t>
</templates>